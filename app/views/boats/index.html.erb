<div>
  <%= link_to 'Rent my boat', new_boat_path, :class => "btn btn-default" %>
</div>


<h1>Available Boats for rent</h1>

<% @boats.each do |boat| %>
<ul>
  <li>
  <%= link_to boat.name, boat_path(boat) %>
  <%= boat.category %>
  <%= boat.address %>
  <%= boat.price_per_day %>
  </li>
</ul>
<% end %>



