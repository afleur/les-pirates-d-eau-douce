<div class="background">
  <div class="center">
    <h1>Available Boats for rent</h1>
  </div>

  <div class="container">
      <div class="row">
        <% @boats.each do |boat| %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card">
              <div class="card-content" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path boat.photo, height: 300, crop: :fill %>')">
                <div class="card-category"><%= boat.category %></div>
                <div class="card-body">
                  <p>Ã  partir de <%= boat.price_per_day %> CHF/jour</p>
                </div>
              </div>
              <div class="card-footer">
                <h2><%= link_to boat.name, boat_path(boat) %></h2>
                <p><i class="far fa-compass">
                </i>  <%= boat.address %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>

<div
  id="map"
  style="width: 100%;
  height: 500px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<script>
      function initMap() {
        // Create a map object and specify the DOM element for display.
        var map = document.getElementById('map'), {
          center: {lat: 52.5206, lng: 13.4098},
          scrollwheel: false,
          zoom: 8
        };
      }
</script>
