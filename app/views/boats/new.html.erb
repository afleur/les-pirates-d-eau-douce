<div class="container background top-bottom-padding">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <h1>Votre bateau</h1>
        <%= simple_form_for [@user, @boat] do |f| %>
          <%= f.input :name %>
          <%= f.input :category %>
          <%= f.input :price_per_day %>
          <%= f.input :description %>
          <%= f.input :address %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit class: 'btn btn-default center' %>
        <% end %>
    </div>
  </div>
</div>

