<h1>Add your boat</h1>

<%= simple_form_for(@boat) do |f| %>
  <!-- [...] -->
  <%= f.input :name %>
  <%= f.input :category %>
  <%= f.input :price_per_day %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :picture %>
  <%= f.input :picture_cache, as: :hidden %>
  <!-- [...] -->
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

